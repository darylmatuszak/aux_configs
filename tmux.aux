set -g display-panes-time 3000

set -g mode-keys vi

bind-key -T prefix ] paste-buffer -d

# for toggling nested sessions (over SSH)

bind -T root F12  \
  set prefix None \;\
  set key-table off \;\
  set status-style "bg=black" \;\
  refresh-client -S \;\

bind -T off F12 \
  set -u prefix \;\
  set -u key-table \;\
  set -u status-style \;\
  set -u window-status-current-style \;\
  set -u window-status-current-format \;\
  refresh-client -S
